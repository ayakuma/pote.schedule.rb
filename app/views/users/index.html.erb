<h2>スケジュール一覧</h2>

<% if flash.notice %>
  <p class="notice"><%= flash.notice%></p>
<%end%>

<table> 
    <thead>
        <tr>
            <th>ID</th>
            <th>タイトル</th>
            <th>開始日</th>
            <th>終了日</th>
            <th>終日</th>
            <th>スケジュール更新日時</th>
            <th>確認</th>
            <th>編集</th>
            <th>削除</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.title %></td>
                <td><%= user.start.strftime('%Y月%m日%d日') %></td>
                <td><%= user.end.strftime('%Y月%m日%d日') %></td>
                <td><% if user.allday %>
                    <strong>○</strong>
                  <% end %></td>
                <td><%= user.updated_at.to_s(:datetime_jp) %></td>
                <td><%= link_to "確認", user, class:"textdeco"%></td>
                <td><%= link_to "編集", [:edit, user], class:"textdeco" %></td>
                <td><%= link_to "削除", user, method: :delete, data:{confirm:"本当に削除しますか？"}, class:"textdeco" %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<p>
<%= link_to "スケジュール新規登録", :new_user , class:"textdeco"%>
</p>

<% content_for(:sum, "スケジュール合計：#{@count} ") %>
