<h2>ユーザー新規作成</h2>

<%= render "shared/error", obj: @user %>　<!--ここを追加する-->

<%= form_for @user do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start ,"開始日" %></th>
            <td><%= f.date_field :start %></td>
        </tr>        
        <tr>
            <th><%= f.label :end ,"終了日" %></th>
            <td><%= f.date_field :end %></td>
        </tr>        
        <tr>
            <th><%= f.label :allday ,"終日" %></th>
            <td><%= f.check_box :allday %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
        </ul>
    </div>
<% end %>