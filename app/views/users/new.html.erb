<h2>ユーザー新規作成</h2>

<%= render "shared/error", obj: @user %>　<!--ここを追加する-->

<%= form_for @user do |f| %>
    <table>
        <tr>
            <th><%= f.label :name ,"タイトル" %></th>
            <td><%= f.text_field :name %></td>
        </tr>
        <tr>
            <th><%= f.label :diary ,"開始日" %></th>
            <td><%= f.date_field :diary %></td>
        </tr>        
        <tr>
            <th><%= f.label :enddate ,"終了日" %></th>
            <td><%= f.date_field :enddate %></td>
        </tr>        
        <tr>
            <th><%= f.label :email ,"終日" %></th>
            <td><%= f.check_box :email %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "登録完了する"%></li>
            <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
        </ul>
    </div>
<% end %>