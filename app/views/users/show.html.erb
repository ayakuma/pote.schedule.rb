<h2>スケジュール詳細</h2>

<table>

    <tr>
        <th>タイトル</th>
        <td><%= @user.title %></td>
    </tr>
    <tr>
        <th>開始日</th>
        <td><%= @user.start.strftime('%Y月%m日%d日') %></td>
    </tr>
    <tr>
        <th>終了日</th>
        <td><%= @user.end.strftime('%Y月%m日%d日') %></td>
    </tr>
    <tr>
        <th>終日</th>
        <td><% if @user.allday %>    <strong>○</strong>    <% end %> </td> 

    </tr>
    <tr>
        <th>投稿日時</th>
        <td><%= @user.created_at.to_s(:datetime_jp) %></td>
    </tr>
    <tr>
        <th>スケジュールメモ</th>
        <td><%= @user.introduction %></td>

    </tr>
</table>

<div>
    <ul>
        <li><%= link_to "スケジュール一覧に戻る", :users, class:"textdeco" %></li>
        <li><%= link_to "スケジュールを編集する", [:edit, @user], class:"textdeco" %></li>
        <li><%= link_to "スケジュールを削除", @user, method: :delete, data:{confirm:"本当に削除しますか？"}, class:"textdeco" %></li>
    </ul>
</div>